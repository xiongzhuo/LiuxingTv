<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5.8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/black2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备列表"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp23" />

                <ImageView
                    android:id="@+id/image_refeur"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:focusable="true"
                    android:paddingRight="@dimen/dp30"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_imager_focused" />

            </LinearLayout>

            <activity.liuxing.tv.com.tvliuxing.activity.view.SmoothScrollListView
                android:id="@+id/lv_classify"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="6"
                android:background="@color/black2"
                android:divider="@null"
                android:focusable="true"
                android:listSelector="@drawable/bg_button_focused"
                android:scrollbars="none"></activity.liuxing.tv.com.tvliuxing.activity.view.SmoothScrollListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/black2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/app_code"
                    android:gravity="center"
                    android:text="下载APP"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/dy_code"
                    android:gravity="center"
                    android:text="关注公众号"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.8"
            android:orientation="vertical"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_weight="1"
                android:background="@color/black2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:text="六星云智能环境监控系统"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp28" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="3dp">

                        <TextView
                            android:id="@+id/tv_sys_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="2017.05.10   10:16"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp18" />

                        <TextView
                            android:id="@+id/tv_share_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:text="六星净化"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp18" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginRight="15dp"
                        android:focusable="true"
                        android:padding="@dimen/dp15"
                        android:scaleType="fitCenter"
                        android:src="@drawable/wifi_sel" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="horizontal"
                android:weightSum="4.6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:weightSum="9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="26sp">

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ling"
                            android:drawablePadding="10dp"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp18" />

                        <TextView
                            android:id="@+id/tv_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp18" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_pm_indoor"
                            android:layout_width="340dp"
                            android:layout_height="340dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp10"
                            android:background="@drawable/crcip_bg"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.9"
                                android:gravity="center_horizontal|bottom"
                                android:text="室内 PM 2.5"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp28" />

                            <TextView
                                android:id="@+id/tv_indoor_pm"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1.8"
                                android:gravity="center"
                                android:text="--"
                                android:textColor="@android:color/white"
                                android:textSize="100sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.6"
                                android:gravity="center|top"
                                android:text="ug/m³"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp25" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.7"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_pm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/text_bg"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/dp60"
                                    android:paddingRight="@dimen/dp60"
                                    android:singleLine="true"
                                    android:text="--"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp20" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="2.6"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/number_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp10">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="室   外"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/sp20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="PM2.5"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/sp20" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_outdoor_pm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp80"
                                android:text="--"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" ug/m³"
                                android:textColor="@android:color/white"
                                android:textSize="23sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_co_indoor"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/crcip_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:weightSum="4">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:gravity="center|bottom"
                            android:text="室内CO₂"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_co"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp35"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|top"
                            android:text="PPM"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_co_ier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/text_co_bg"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:singleLine="true"
                                android:text="--"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_wethar_indoor"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginBottom="@dimen/dp30"
                        android:layout_marginTop="@dimen/dp30"
                        android:background="@drawable/crcip_bg_indoor_wethar"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:weightSum="4">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:gravity="center|bottom"
                            android:text="室内温度"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_wethar_indoor"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp35"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|top"
                            android:text="℃"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_indoor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/text_wethar_indoor_bg"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp25"
                                android:paddingRight="@dimen/dp25"
                                android:singleLine="true"
                                android:text="--"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_wethar_outdoor"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/crcip_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:gravity="center|bottom"
                            android:text="室外温度"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_wethar_outdoor"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp35"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center|top"
                            android:text="℃"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_outdoor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/text_wethar_outdoor_bg"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp25"
                                android:paddingRight="@dimen/dp25"
                                android:singleLine="true"
                                android:text="--"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>